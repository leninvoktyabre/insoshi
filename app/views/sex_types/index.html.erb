<h2>Listing sex</h2>

<table>
  <tr>
		<th>id</th>
    <th>Sex</th>
    <th>Status</th>
    <th colspan="2">Controls</th>
  </tr>

<% n = 0%>
<% @sex.each do |sex| %>
  <tr>
		<td><%= n += 1 %></td>
    <td><%= sex.title %></td>
    <td><%= SexType::status_list.invert[sex.status] %></td>
    <td><%= link_to 'Edit', edit_admin_sex_type_path(sex) %></td>
    <td><%= link_to 'Destroy', sex, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

