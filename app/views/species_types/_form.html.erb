<%= error_messages_for :species %>

<% form_for(@spec) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :status %>
    <%= f.select(:status, SpeciesType::status_list) %>
  </div>
	<br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>