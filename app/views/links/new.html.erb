<%- if logged_in? -%>
	<%- column_div :type => :primary do -%>
	  <h2>New link</h2>

		<%= error_messages_for :link %>

		<%- form_for([@category, @link]) do |f| -%>

			<div class="form_row">
	      <label for="title">Title</label>
	      <%= f.text_field :title %>
	    </div>

	    <div class="form_row">
	      <label for="description">Description</label>
	      <%= f.text_area :description, :rows => 5 %>
	    <div>
		
			<div class="form_row">
	      <label for="url">URL</label>
	      <%= f.text_field :url, :value => 'http://' %>
	    </div>

	    <div class="form_row">
	      <%= f.submit "Create", :class => "button" %>
	      <%= link_to "Cancel", catalog_path(@category) %>
	    </div>
	  <%- end -%>
	<%- end -%>
<%- end -%>
