<h2>Listing breeds</h2>

<table>
  <tr>
		<th>id</th>
    <th>Species</th>
    <th>Breeds</th>
    <th>Status</th>
    <th colspan="2">Controls</th>
  </tr>

<% n = 0 %>
<% item = 0 %>
<% @breeds.each do |breed| %>
  <tr>
		<td><%= n += 1 %></td>
    <td><%= item.title if item = SpeciesType.find_by_id(breed.species_id) %></td>
    <td><%= breed.title %></td>
    <td><%= BreedType::status_list.invert[breed.status] %></td>
    <td><%= link_to 'Edit', edit_admin_breed_type_path(breed) %></td>
    <td><%= link_to 'Destroy', breed, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Breed', new_admin_breed_type_path %>