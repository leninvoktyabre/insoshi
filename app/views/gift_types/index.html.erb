<h2>Listing gifts</h2>

<table>
  <tr>
	<th>id</th>
    <th>Title</th>
    <th>Costs</th>
    <th>Image Path</th>
    <th>Status</th>
    <th colspan="2">Controls</th>
  </tr>

<% n = 0%>
<% @gifts.each do |gift| %>
  <tr>
	<td><%= n += 1 %></td>
    <td><%= gift.title %></td>
    <td><%= gift.costs %></td>
    <td><%= gift.image_path %></td>
    <td><%= GiftType::status_list.invert[gift.status] %></td>
    <td><%= link_to 'Edit', edit_admin_gift_type_path(gift) %></td>
    <td><%= link_to 'Destroy', gift, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Gift', new_admin_gift_type_path %>