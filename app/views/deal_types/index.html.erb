<h2>Listing deals</h2>

<table>
  <tr>
		<th>id</th>
    <th>Deal</th>
    <th>Status</th>
    <th colspan="2">Controls</th>
  </tr>

<% n = 0%>
<% @deals.each do |deal| %>
  <tr>
		<td><%= n += 1 %></td>
    <td><%= deal.title %></td>
    <td><%= DealType::status_list.invert[deal.status] %></td>
    <td><%= link_to 'Edit', edit_admin_deal_type_path(deal) %></td>
    <td><%= link_to 'Destroy', deal, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Deal', new_admin_deal_type_path %>