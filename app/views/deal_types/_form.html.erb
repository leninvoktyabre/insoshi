<%= error_messages_for :deal %>

<% form_for(@deal) do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :status %>
    <%= f.select(:status, DealType::status_list) %>
  </div>
	<br>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>