<%- if logged_in? -%>
	<%- column_div :type => :primary do -%>
	  <h2>New advertisement</h2>

		<%= error_messages_for :advert %>

		<%- form_for(@advert) do |f| -%>
	
			<div class="form_row">
		    <label for="type">Deal type</label>
		    <%= f.select :deal, @advert.deal_list %>
		  </div>

	    <div class="form_row">
	      <label for="species">Species</label>
	      <%= f.select :species, @advert.species_list %>
	    </div>

			<div class="form_row">
	      <label for="sex">Sex</label>
	      <%= f.select :sex, @advert.sex_list %>
	    </div>

			<div class="form_row">
	      <label for="price">Price</label>
	      <%= f.text_field :price %>
	    </div>

			<!--div class="form_row">
	      <label for="age">Title</label>
	      <%= f.text_field :title %>
	    </div-->

	    <div class="form_row">
	      <label for="description">Description</label>
	      <%= f.text_area :description, :rows => 5 %>
	    <div>

	    <div class="form_row">
	      <%= f.submit "Create", :class => "button" %>
	      <%= link_to "Cancel", adverts_path %>
	    </div>
	  <%- end -%>
	<%- end -%>
<%- end -%>
